{# Small committee member thumbnail for homepage #}
{# Usage: {% include "committee-thumbnail.njk" %} with member, linkTo variables #}
<div class="col-6 col-md-4 col-lg-2 text-center">
    <a href="{{ linkTo }}" class="text-decoration-none">
        <img src="/assets/images/{{ member.photo }}" alt="{{ member.name }}" class="rounded-circle mb-2 committee-thumb" loading="lazy" />
        <h3 class="h6 fw-bold mb-0">{{ member.name }}</h3>
        <p class="small text-muted mb-0">{{ member.affiliation }}</p>
    </a>
</div>
